@model List<Producto>
@{
}

<h2 class="text-center mb-5">Lista de productos</h2>

<div class="row mb-5">
	<div class="col">
		<a class="button btn-primary" asp-controller="ControladorProductos" asp-action="Create">Nuevo Producto</a>
	</div>
	<div class="col">

	</div>

</div>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nombre</th>
			<th>Marca</th>
			<th>Categoría</th>
			<th>Precio</th>
			<th>Imagen</th>
			<th>Creado en</th>
			<th>Acción</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var producto in Model)
		{
			<tr>
				<td>@producto.Id</td>
				<td>@producto.Nombre</td>
				<td>@producto.Marca</td>
				<td>@producto.Categoria</td>
				<td>@(producto.Precio)U$</td>
				<td><img src="~/productos/@producto.NombreArchivoImagen" width="100"></td>
				<td>@producto.CreadoEn.ToString("dd/MM/yyyy")</td>
				<td style="white-space: nowrap;">
					<a class="btn btn-primary btn-sm" asp-controller="ControladorProductos" asp-action="Edit" asp-route-id="@producto.Id">Editar</a>
					<a class="btn btn-danger btn-sm" asp-controller="ControladorProductos" asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
				</td>
			</tr>
		}
	</tbody>

</table>

